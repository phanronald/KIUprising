{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2017",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "strict": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "bin",
        "node_modules"
    ]
}